<h1>SSB Tournament Manager</h1>

<h2>Signing in</h2>

<div class='col-md-12 col-xs-12'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :login, 'Username or Email' %><br />
      <%= f.text_field :login, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember me" %>
        </label>
      </div>
    <% end -%>

    <%= f.submit "Log in", class:'btn btn-success' %>
    or
    <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-primary' %>
    <br><br>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:'btn btn-warning' %>

  <% end %>
</div>
