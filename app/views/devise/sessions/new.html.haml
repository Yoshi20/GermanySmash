.row
  .col
    %h1.page__title Login

.login
  = form_tag session_path(:user), class: "form" do
    = recaptcha_v3(action: 'login')
    .form-group
      = text_field_tag "user[login]", "", class: "form-control form-control-sm", placeholder: "Username", autofocus: 'true'
    .form-group
      = password_field_tag "user[password]", "", class: "form-control form-control-sm", placeholder: "Password"
    .form-group
      = submit_tag "Log in", class: "btn btn-sstm"
      = link_to "Sign up", new_user_registration_path,  class: "btn btn-ghost"
    .form-group
      = link_to "Forgot your password?", new_password_path(resource_name)
