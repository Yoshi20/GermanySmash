!!!
%html
  %head
    %title SSB Tournaments Bern
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    .wrapper.fixed-width
      .banner
        .fixed-width
          = image_tag 'banner.jpg', height: '200px', width: '100%'
          .inside-banner
            = link_to image_tag('logistik.png', height: '150px', width: '150px'), root_path

      .header
        .fixed-width
          .navigation-header
            = render '/layouts/navigation'

        -# -# login header
        -# .col-md-6
        -#   .row.login-header
        -#     = render '/layouts/login'

      -# flash notifications and alerts
      .flashes
        .fixed-width
          = render '/layouts/flashes'

      -# main content (index.html)
      .container.content-wrapper
        .content
          = yield
