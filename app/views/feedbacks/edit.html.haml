%h1= t('feedback.title_edit')

.row.form
  .col-md-8
    = render 'form', feedback: @feedback

  .col-md-4
    %strong
      %p= link_to 'Show', feedback_path(@feedback)
      - if current_user.admin? or current_user == @feedback.user
        %p= link_to 'Delete', @feedback, method: :delete, data: { confirm: t('feedback.confirm') }
      %p= link_to 'Back', :back
