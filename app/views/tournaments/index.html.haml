.row.tournament-filter#upcoming-tournaments
  .col-md-12
    %p.tournament-filter-text= link_to 'All',       tournaments_path(filter: 'all'),       style: "text-decoration: #{(params[:filter].nil? or params[:filter] == 'all') ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'External',  tournaments_path(filter: 'external'),  style: "text-decoration: #{params[:filter] == 'external' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Internal',  tournaments_path(filter: 'internal'),  style: "text-decoration: #{params[:filter] == 'internal' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Weekly',    tournaments_path(filter: 'weekly'),    style: "text-decoration: #{params[:filter] == 'weekly' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Baden',     tournaments_path(filter: 'baden'),     style: "text-decoration: #{params[:filter] == 'baden' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Bern',      tournaments_path(filter: 'bern'),      style: "text-decoration: #{params[:filter] == 'bern' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Geneva',    tournaments_path(filter: 'geneva'),    style: "text-decoration: #{params[:filter] == 'geneva' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Solothurn', tournaments_path(filter: 'solothurn'), style: "text-decoration: #{params[:filter] == 'solothurn' ? 'underline' : ''};"
    %p.tournament-filter-text= link_to 'Zurich',    tournaments_path(filter: 'zurich'),    style: "text-decoration: #{params[:filter] == 'zurich' ? 'underline' : ''};"

-# tournaments list
.row.tournament-list
  .col-md-12
    %table.table.table-striped
      %thead.tournament-list-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @tournaments

    .row.tournament-list-footer
      -# pageinator
      .col-md-10
      -#   = render 'paginator'

      -# 'Add Tournament' button
      .col-md-2
        - if current_user.present? and current_user.admin?
          .add-tournament-button
            = link_to 'Add Tournament', new_tournament_path, class:'btn btn-primary pull-right', style: 'margin-bottom: 15px;'

.row.title-div
  .col-md-12
    %h1= "Past tournaments 2019"

-# past tournaments list
.row.tournament-list#past-tournaments
  .col-md-12
    %table.table.table-striped
      %thead.tournament-list-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @past_tournaments

    .row.tournament-list-footer
      -# pageinator
      .col-md-12
        = render 'paginator'
