.row
  .col
    %h1.page__title
      Tournaments

%ul#tournaments-tabs.nav.nav-pills.nav-fill{role: 'tablist'}
  %li.nav-item
    %a#upcoming-tab.nav-link.active{'data-toggle'=>'tab', href: '#upcoming', role: 'tab', 'aria-controls'=>'all'}
      = 'Upcoming'
  - if @ongoing_tournaments.any?
    %li.nav-item
      %a#ongoing-tab.nav-link{'data-toggle'=>'tab', href: '#ongoing', role: 'tab', 'aria-controls'=>'all'}
        = 'Ongoing'
  %li.nav-item
    %a#past-tab.nav-link{'data-toggle'=>'tab', href: '#past', role: 'tab', 'aria-controls'=>'all'}
      = 'Past'
  - if @inactive_tournaments.present? and @inactive_tournaments.any?
    %li.nav-item
      %a#inactive-tab.nav-link{'data-toggle'=>'tab', href: '#inactive', role: 'tab', 'aria-controls'=>'all'}
        = 'Deleted'
        %i{style: 'font-size: 10px;'}= '(admins)'

.tab-content#tournaments-tabs-content
  .tab-pane.fade#ongoing{role: 'tabpanel', 'aria-labelledby'=>'ongoing-tab'}
    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @ongoing_tournaments

  .tab-pane.fade.show.active#upcoming{role: 'tabpanel', 'aria-labelledby'=>'upcoming-tab'}
    .tournaments__filter
      .tournaments__filter__button= link_to 'All', tournaments_path(filter: 'all', anchor: 'upcoming'), class: "btn #{(params[:filter].nil? or params[:filter] == 'all') ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'External', tournaments_path(filter: 'external', anchor: 'upcoming'), class: "btn #{params[:filter] == 'external' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Internal', tournaments_path(filter: 'internal', anchor: 'upcoming'), class: "btn #{params[:filter] == 'internal' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Weekly', tournaments_path(filter: 'weekly', anchor: 'upcoming'), class: "btn #{params[:filter] == 'weekly' ? 'btn-sstm' : 'btn-ghost'}"
      - tournament_cities.each do |city|
        .tournaments__filter__button= link_to city, tournaments_path(filter: city.downcase, anchor: 'upcoming'), class: "btn #{params[:filter] == city.downcase ? 'btn-sstm' : 'btn-ghost'}"

    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @tournaments

    - if !@tournaments.any?
      %p{style: 'text-align: center;'}
        No tournaments found

    .tournament-list-footer
      = render 'paginator', tournaments: @tournaments, anchor: 'upcoming'

  .tab-pane.fade#past{role: 'tabpanel', 'aria-labelledby'=>'past-tab'}
    .tournaments__filter
      .tournaments__filter__button= link_to 'All', tournaments_path(filter: 'all', anchor: 'past'), class: "btn #{(params[:filter].nil? or params[:filter] == 'all') ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'External', tournaments_path(filter: 'external', anchor: 'past'), class: "btn #{params[:filter] == 'external' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Internal', tournaments_path(filter: 'internal', anchor: 'past'), class: "btn #{params[:filter] == 'internal' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Weekly', tournaments_path(filter: 'weekly', anchor: 'past'), class: "btn #{params[:filter] == 'weekly' ? 'btn-sstm' : 'btn-ghost'}"
      - tournament_cities.each do |city|
        .tournaments__filter__button= link_to city, tournaments_path(filter: city.downcase, anchor: 'past'), class: "btn #{params[:filter] == city.downcase ? 'btn-sstm' : 'btn-ghost'}"

    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @past_tournaments

    .tournament-list-footer
      = render 'paginator', tournaments: @past_tournaments, anchor: 'past'

  - if @inactive_tournaments.present? and @inactive_tournaments.any?
    .tab-pane.fade#inactive{role: 'tabpanel', 'aria-labelledby'=>'inactive-tab'}
      %table.table.table-hover.table-tournaments
        %thead.table-header
          = render "tournament_list_header"

        %tbody.with-show.tournament-list-body
          = render @inactive_tournaments

      .tournament-list-footer
        = render 'paginator', tournaments: @inactive_tournaments, anchor: 'inactive'

- if current_user.present? and current_user.admin?
  .admin-actions
    .admin-actions__link
      = link_to new_tournament_path, class:'btn btn-ghost btn-square' do
        %span.material-icons.admin-actions__link__icon= 'add'
