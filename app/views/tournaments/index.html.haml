.row
  .col 
    %h1.page__title 
      Tournaments

%ul#tournaments-tabs.nav.nav-pills.nav-fill{role: 'tablist'}
  %li.nav-item
    %a#upcoming-tab.nav-link.active{'data-toggle'=>'tab', href: '#upcoming', role: 'tab', 'aria-controls'=>'all'}
      = 'Upcoming'
  - if @ongoing_tournaments.any?
    %li.nav-item
      %a#ongoing-tab.nav-link{'data-toggle'=>'tab', href: '#ongoing', role: 'tab', 'aria-controls'=>'all'}
        = 'Ongoing'
  %li.nav-item
    %a#past-tab.nav-link{'data-toggle'=>'tab', href: '#past', role: 'tab', 'aria-controls'=>'all'}
      = 'Past'

.tab-content#tourmanets-tabs-content
  .tab-pane.fade#ongoing{role: 'tabpanel', 'aria-labelledby'=>'ongoing-tab'}
    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @ongoing_tournaments
  .tab-pane.fade.show.active#upcoming{role: 'tabpanel', 'aria-labelledby'=>'upcoming-tab'}
    .tournaments__filter
      .tournaments__filter__button= link_to 'All', tournaments_path(filter: 'all'), class: "btn #{(params[:filter].nil? or params[:filter] == 'all') ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'External', tournaments_path(filter: 'external'),  class: "btn btn-ghost #{params[:filter] == 'external' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Internal', tournaments_path(filter: 'internal'),  class: "btn btn-ghost #{params[:filter] == 'internal' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Weekly', tournaments_path(filter: 'weekly'),    class: "btn btn-ghost #{params[:filter] == 'weekly' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Baden', tournaments_path(filter: 'baden'),     class: "btn btn-ghost #{params[:filter] == 'baden' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Bern', tournaments_path(filter: 'bern'),      class: "btn btn-ghost #{params[:filter] == 'bern' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Geneva', tournaments_path(filter: 'geneva'),    class: "btn btn-ghost #{params[:filter] == 'geneva' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Solothurn', tournaments_path(filter: 'solothurn'), class: "btn btn-ghost #{params[:filter] == 'solothurn' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Zurich', tournaments_path(filter: 'zurich'),    class: "btn btn-ghost #{params[:filter] == 'zurich' ? 'btn-sstm' : 'btn-ghost'}"

    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @tournaments

    .tournament-list-footer
      = render 'paginator'

  .tab-pane.fade#past{role: 'tabpanel', 'aria-labelledby'=>'past-tab'}
    .tournaments__filter
      .tournaments__filter__button= link_to 'All', tournaments_path(filter: 'all'), class: "btn #{(params[:filter].nil? or params[:filter] == 'all') ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'External', tournaments_path(filter: 'external'),  class: "btn btn-ghost #{params[:filter] == 'external' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Internal', tournaments_path(filter: 'internal'),  class: "btn btn-ghost #{params[:filter] == 'internal' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Weekly', tournaments_path(filter: 'weekly'),    class: "btn btn-ghost #{params[:filter] == 'weekly' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Baden', tournaments_path(filter: 'baden'),     class: "btn btn-ghost #{params[:filter] == 'baden' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Bern', tournaments_path(filter: 'bern'),      class: "btn btn-ghost #{params[:filter] == 'bern' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Geneva', tournaments_path(filter: 'geneva'),    class: "btn btn-ghost #{params[:filter] == 'geneva' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Solothurn', tournaments_path(filter: 'solothurn'), class: "btn btn-ghost #{params[:filter] == 'solothurn' ? 'btn-sstm' : 'btn-ghost'}"
      .tournaments__filter__button= link_to 'Zurich', tournaments_path(filter: 'zurich'),    class: "btn btn-ghost #{params[:filter] == 'zurich' ? 'btn-sstm' : 'btn-ghost'}"

    %table.table.table-hover.table-tournaments
      %thead.table-header
        = render "tournament_list_header"

      %tbody.with-show.tournament-list-body
        = render @past_tournaments

    .tournament-list-footer
      = render 'paginator'

- if current_user.present? and current_user.admin?
  .admin-actions
    .admin-actions__link
      = link_to new_tournament_path, class:'btn btn-ghost btn-square' do
        %span.material-icons.admin-actions__link__icon
          add